<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414249"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:onClick="addNumber"
        android:text="@string/_2"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/speed_2" />

    <Button
        android:id="@+id/button9"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:onClick="addNumber"
        android:text="@string/_8"
        app:layout_constraintEnd_toStartOf="@+id/button11"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:onClick="addNumber"
        android:text="@string/_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button10"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:onClick="addNumber"
        android:text="@string/_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button11"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:onClick="addNumber"
        android:text="@string/_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <Button
        android:id="@+id/button8"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:onClick="addNumber"
        android:text="@string/_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button13"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:onClick="addNumber"
        android:text="@string/asterisk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button14"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:onClick="addNumber"
        android:text="@string/_0"
        app:layout_constraintEnd_toStartOf="@+id/button15"
        app:layout_constraintStart_toEndOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button15"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:onClick="addNumber"
        android:text="@string/hash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <Button
        android:id="@+id/button3"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:onClick="addNumber"
        android:text="@string/_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:onClick="addNumber"
        android:text="@string/_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed_1" />

    <Button
        android:id="@+id/button7"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:onClick="addNumber"
        android:text="@string/_5"
        app:layout_constraintEnd_toStartOf="@+id/button10"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/numberholder"
        android:layout_width="262dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="#BABDC5"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textAllCaps="true"
        android:textIsSelectable="false"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="96dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/call"
        android:longClickable="false"
        android:onClick="call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button14"
        app:layout_constraintVertical_bias="0.494"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/del"
        android:onClick="deleteChar"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <Button
        android:id="@+id/speed_1"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:onClick="speedDialPress"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberholder" />

    <Button
        android:id="@+id/speed_2"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:onClick="speedDialPress"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/speed_3"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toEndOf="@+id/speed_1"
        app:layout_constraintTop_toBottomOf="@+id/numberholder" />

    <Button
        android:id="@+id/speed_3"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:onClick="speedDialPress"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberholder" />

</androidx.constraintlayout.widget.ConstraintLayout>